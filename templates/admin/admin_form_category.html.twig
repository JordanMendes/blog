{% extends 'base.html.twig' %}

{% block title %}NOUVELLE CATEGORIES{% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-5">BACKOFFICE | Nouvelle catégorie</h1>

    {{ form_start(formCategory, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

